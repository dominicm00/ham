#!multipleFiles
---
# Update missing leaf target.
# target	- target (missing)
#
#!file Jamfile
actions EchoToFile
{
	echo "Updated" > $(1)
}

LOCATE on target = . ;
EchoToFile target ;

Depends all : target ;
-
#!file target
Updated
---
# Update missing file target, single dependency.
# target	- target (missing)
# source1	- source
#
#!file Jamfile
actions CopyFile
{
	cp $(2) $(1)
	echo "Updated" >> $(1)
}

LOCATE on target = . ;
CopyFile target : source1 ;
Depends target : source1 ;

Depends all : target ;

#!file source1
Source1
-
#!file target
Source1
Updated
---
# Update existing file target, single dependency.
# target	- target (older)
#  source1	- source (newer)
#
#!file Jamfile
actions CopyFile
{
	cp $(2) $(1)
	echo "Updated" >> $(1)
}

LOCATE on target = . ;
CopyFile target : source1 ;
Depends target : source1 ;

Depends all : target ;

#!file target 1
Old
#!file source1
Source1
-
#!file target
Source1
Updated
---
# Don't update existing file target, single older dependency.
# target	- target (newer)
#  source1	- source (older)
#
#!file Jamfile
actions CopyFile
{
	cp $(2) $(1)
	echo "Updated" >> $(1)
}

LOCATE on target = . ;
CopyFile target : source1 ;
Depends target : source1 ;

Depends all : target ;

#!file target
Old
#!file source1 1
Source1
-
#!file target
Old
---
# Update missing file target, multiple dependencies.
# target	- target (missing)
#  source1	- source
#  source2	- source
#  source3	- source
#
#!file Jamfile
rule JoinFiles
{
	Depends $(1) : $(2) ;
}

actions JoinFiles
{
	cat $(2) > $(1)
	echo "Updated" >> $(1)
}

LOCATE on target = . ;
JoinFiles target : source1 source2 source3 ;
Depends all : target ;

#!file source1
Source1
#!file source2
Source2
#!file source3
Source3
-
#!file target
Source1
Source2
Source3
Updated
---
# Update older file target, multiple newer dependencies.
# target	- target (older)
#  source1	- source (newer)
#  source2	- source (newer)
#  source3	- source (newer)
#
#!file Jamfile
rule JoinFiles
{
	Depends $(1) : $(2) ;
}

actions JoinFiles
{
	cat $(2) > $(1)
	echo "Updated" >> $(1)
}

LOCATE on target = . ;
JoinFiles target : source1 source2 source3 ;
Depends all : target ;

#!file target 1
Old
#!file source1
Source1
#!file source2
Source2
#!file source3
Source3
-
#!file target
Source1
Source2
Source3
Updated
---

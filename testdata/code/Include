#!compat jam ham
#!file Jamfile
Echo 1 ;
include File1 ;
Echo 2 ;
include File2 ;
Echo 3 ;

#!file File1
Echo 4 ;
include File2 ;
Echo 5 ;

#!file File2
Echo 6 ;
jumptoeof ;
Echo 7 ;

paths =
	foo
	bar.a
	foobar.bee
	path/foo
	path/foo.a
	some/path/bar.bee
	/an/absolute/path/foobar.so
	/
	<grist>some/path/bar.bee(archive.o)
;
for result in "$(paths:%1)" {
	Echo $(result) ;
}
---
D=
-
foo
bar.a
foobar.bee
foo
foo.a
bar.bee
foobar.so

<grist>bar.bee(archive.o)
---
D=directory
-
directory/foo
directory/bar.a
directory/foobar.bee
directory/foo
directory/foo.a
directory/bar.bee
directory/foobar.so
directory
<grist>directory/bar.bee(archive.o)
---
D=directory/
-
directory//foo
directory//bar.a
directory//foobar.bee
directory//foo
directory//foo.a
directory//bar.bee
directory//foobar.so
directory/
<grist>directory//bar.bee(archive.o)
---
D=dir1/dir2/dir3
-
dir1/dir2/dir3/foo
dir1/dir2/dir3/bar.a
dir1/dir2/dir3/foobar.bee
dir1/dir2/dir3/foo
dir1/dir2/dir3/foo.a
dir1/dir2/dir3/bar.bee
dir1/dir2/dir3/foobar.so
dir1/dir2/dir3
<grist>dir1/dir2/dir3/bar.bee(archive.o)
---
D=/dir1/dir2/dir3
-
/dir1/dir2/dir3/foo
/dir1/dir2/dir3/bar.a
/dir1/dir2/dir3/foobar.bee
/dir1/dir2/dir3/foo
/dir1/dir2/dir3/foo.a
/dir1/dir2/dir3/bar.bee
/dir1/dir2/dir3/foobar.so
/dir1/dir2/dir3
<grist>/dir1/dir2/dir3/bar.bee(archive.o)
---
D=/
-
/foo
/bar.a
/foobar.bee
/foo
/foo.a
/bar.bee
/foobar.so

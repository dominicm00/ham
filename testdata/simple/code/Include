#!file Jamfile
condition = ;
Echo 1 ;
if $(condition) {
	include File1 ;
}
Echo 2 ;

#!file File1
Echo 3 ;
-
1
2
---
#!file Jamfile
condition = true ;
Echo 1 ;
if $(condition) {
	include File1 ;
}
Echo 2 ;

#!file File1
Echo 3 ;
-
1
3
2
---
#!file Jamfile
list = 1 2 3 4 ;
Echo 1 ;
for element in $(list) {
	include File1 ;
}
Echo 2 ;

#!file File1
Echo 3: $(element) ;
-
1
3: 1
3: 2
3: 3
3: 4
2
---

SubDir HAM_TOP src ;

SEARCH_SOURCE += [ FDirName $(SUBDIR) code ] ;
SEARCH_SOURCE += [ FDirName $(SUBDIR) data ] ;
SEARCH_SOURCE += [ FDirName $(SUBDIR) grammar ] ;


SharedLibrary libham.so
	:
	# code
	ActionsDefinition.cpp
	Assignment.cpp
	BinaryExpression.cpp
	Block.cpp
	Case.cpp
	DumpContext.cpp
	If.cpp
	Include.cpp
	For.cpp
	FunctionCall.cpp
	InListExpression.cpp
	Jump.cpp
	Leaf.cpp
	List.cpp
	LocalVariableDeclaration.cpp
	Node.cpp
	NotExpression.cpp
	OnExpression.cpp
	RuleDefinition.cpp
	Switch.cpp
	While.cpp

	# data
	String.cpp

	# grammar
	Parser.cpp

	:
	$(TARGET_LIBSTDC++)
;


BinCommand ham
	:
	ham.cpp

	:
	libham.so
	$(TARGET_LIBSTDC++)
;


SubInclude HAM_TOP src tests ;
